<!DOCTYPE html>
<html>
  <head>
    <title>HealthTracker</title>
    <%= csrf_meta_tags %>
    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <nav class="navbar navbar-default navbar-fixed-top" role="navigation">
      <div class="container-fluid">
        <div class="navbar-header">
          <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#bs-example-navbar-collapse-6">
            <span class="sr-only">Toggle navigation</span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
          </button>
          <ul class="nav navbar-nav">
            <li><%= link_to "Health Tracker", foods_path, class: "navbar-brand" %></li>
          </ul>
        </div>

        <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-6">
          <ul class="nav navbar-nav">
            <% if current_user %>
              <li class="nav-item"><%= link_to "Logout", destroy_user_session_path, :method => "delete" %></li>
              <li class="nav-item"><%= link_to "My Profile", user_path(current_user.id) %></li>
            <% else %>
              <li class="nav-item"><%= link_to "Login", new_user_session_path %></li>
              <li class="nav-item"><%= link_to "Sign Up", new_user_registration_path %></li>
            <% end %>
         </ul>
        </div><!-- /.navbar-collapse -->
      </div>
    </nav>
      <div class="push-down container">
        <% if flash[:notice] %>
          <div class="alert alert-info push-down">
            <%= flash[:notice] %>
          </div>
        <% end %>
        <% if flash[:alert] %>
          <div class="alert alert-danger push-down">
            <%= flash[:alert] %>
          </div>
          <% end %>
      </div>

      <div class="push-down container">
        <%= yield %>
      </div>

      <footer class="footer">
        <div class="text-muted">
          <br><p>&copy; 2016 Matt Carlson and Molly McGlone</p>
        </div>
      </footer>
  </body>
</html>
